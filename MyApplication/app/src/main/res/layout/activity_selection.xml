<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.whi.emmersiv.myapplication.SelectionActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="112dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:padding="20dp"
            android:textSize="36dp"
            android:inputType="text|number"
            android:autoText="false"
            android:text="Welcome..." />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="This is the assessment application. You&apos;ll be shown various social sequences through video and will be asked to comment upon them. \n\nBefore we get started, please enter the identifier for the participant"
            android:id="@+id/textView2"
            android:padding="20dp"
            android:textSize="26dp"
            android:textColor="#ff6b6b6b" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtSubjectId"
            android:layout_margin="20dp"
            android:textSize="24dp"
            android:inputType="text|textNoSuggestions|textCapWords"
            android:hint="Enter subject ID (e.g. FG18)"
            android:paddingTop="30dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="NEXT >"
                android:id="@+id/btnSubmit"
                android:layout_alignParentBottom="false"
                android:textSize="22dp"
                android:enabled="true"
                android:padding="0dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
