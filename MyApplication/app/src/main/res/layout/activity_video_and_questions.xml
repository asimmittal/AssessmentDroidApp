<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff0d0d20"
    android:padding="0dp"
    android:id="@+id/rootContainer">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/videoContainer"
        android:clickable="false">

        <VideoView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/videoView"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/pauseIcon"
            android:background="#aa000000">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/img"
                android:layout_centerInParent="true"
                android:src="@raw/pause" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff9fdff"
        android:id="@+id/containerQuestions"
        android:layout_margin="0dp"
        android:padding="20dp"
        android:visibility="visible">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Questions"
                android:id="@+id/txtTitleQuestion"
                android:textSize="28dp"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:layout_marginTop="0dp"
                android:paddingTop="20dp" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/btnVideo"
                android:layout_weight="0"
                android:src="@drawable/ic_play" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/btnAudio"
                android:layout_weight="0"
                android:src="@drawable/ic_repeat" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:background="#4a47b3ff"
            android:layout_marginBottom="10dp"
            android:id="@+id/BlueSpacer"
            android:layout_weight="0"></LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="If you&apos;re seeing this text, please press the back button and retry this module"
            android:id="@+id/txtQuestion"
            android:textSize="42dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:id="@+id/rdGrpOptions"
            android:layout_marginTop="50dp"
            android:visibility="visible">

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:id="@+id/opt1"
                android:textSize="36dp"
                android:layout_margin="10dp"
                android:visibility="invisible" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:id="@+id/opt2"
                android:textSize="36dp"
                android:layout_margin="10dp"
                android:visibility="invisible" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="I don&apos;t know"
                android:id="@+id/opt3"
                android:textSize="36dp"
                android:layout_margin="10dp"
                android:visibility="invisible" />
        </RadioGroup>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:text="Next >"
                android:id="@+id/btnSubmit"
                android:layout_alignParentRight="false"
                android:textSize="24dp"
                android:layout_alignParentBottom="true"
                android:enabled="false" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
